{
	"name": "engrave-protocol",
	"version": "1.0.0",
	"description": "MCP Server bridging AI Agents on Solana with Bitcoin's settlement layer through x402 payment endpoints",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"dev": "nodemon index.js",
		"mcp:start": "node src/mcp/server.js",
		"mcp:dev": "nodemon src/mcp/server.js",
		"mcp:inspect": "npx @modelcontextprotocol/inspector node src/mcp/server.js",
		"mcp:create-wallet": "node -e \"import('./src/mcp/wallet-utils.js').then(m => m.createWallet('./mcp_wallet.json'))\"",
		"migrate": "chmod +x migrate.sh && ./migrate.sh",
		"test": "ava",
		"test:watch": "ava --watch",
		"test:x402": "ava tests/x402-integration.test.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/david-dacruz/engrave-protocol.git"
	},
	"keywords": [
		"x402",
		"bitcoin",
		"ordinals",
		"solana",
		"hackathon",
		"AI",
		"mcp",
		"mcp-server"
	],
	"author": "David Dacruz",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/david-dacruz/engrave-protocol/issues"
	},
	"homepage": "https://github.com/david-dacruz/engrave-protocol#readme",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^0.5.0",
		"@solana/web3.js": "^1.98.4",
		"axios": "^1.7.9",
		"bip32": "^4.0.0",
		"bitcoinjs-lib": "^6.1.5",
		"bottleneck": "^2.19.5",
		"decimal.js": "^10.6.0",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"redoc-express": "^2.1.3",
		"swagger-jsdoc": "^6.2.8",
		"tiny-secp256k1": "^2.2.3",
		"tweetnacl": "^1.0.3",
		"x402-solana": "^0.1.3"
	},
	"devDependencies": {
		"@types/node": "^24.10.0",
		"ava": "^6.4.1",
		"nodemon": "^3.1.10"
	}
}
