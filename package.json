{
	"name": "engrave-protocol",
	"version": "1.0.0",
	"description": "MCP Server bridging AI Agents on Solana with Bitcoin's settlement layer through x402 payment endpoints",
	"type": "module",
	"scripts": {
		"install:all": "npm install && cd api && npm install && cd ../app && npm install",
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:app\"",
		"dev:api": "cd api && npm run dev",
		"dev:app": "cd app && node index.js",
		"start": "concurrently \"npm run start:api\" \"npm run start:app\"",
		"start:api": "cd api && npm start",
		"start:app": "cd app && node index.js",
		"test": "cd api && npm test",
		"test:basic": "cd api && node test-basic.js",
		"test:endpoints": "cd api && node test-endpoints.js",
		"test:app": "npm run start:app"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/david-dacruz/engrave-protocol.git"
	},
	"keywords": [
		"x402",
		"bitcoin",
		"ordinals",
		"solana",
		"hackathon",
		"AI",
		"mcp",
		"mcp-server"
	],
	"author": "David Dacruz",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/david-dacruz/engrave-protocol/issues"
	},
	"homepage": "https://github.com/david-dacruz/engrave-protocol#readme",
	"devDependencies": {
		"concurrently": "^8.2.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}